{
  "name": "@juice10/hono-zod-asyncapi",
  "version": "0.1.0",
  "description": "A Hono package for generating AsyncAPI specifications for WebSocket routes with Zod validation",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts",
    "dev": "tsup src/index.ts --format esm --dts --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest --run",
    "test:coverage": "vitest --run --coverage",
    "lint": "eslint src",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "ci": "bun run typecheck && bun run test:run && bun run build",
    "prepublishOnly": "bun run ci",
    "release": "bun run prepublishOnly && changeset publish"
  },
  "keywords": [
    "hono",
    "asyncapi",
    "websocket",
    "zod",
    "validation",
    "api",
    "documentation"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^8.1.0"
  },
  "peerDependencies": {
    "hono": ">=4.3.6",
    "zod": "^3.0.0 || ^4.0.0"
  },
  "peerDependenciesMeta": {
    "@hono/zod-openapi": {
      "optional": true
    }
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "@hono/zod-openapi": "^1.1.4",
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "^4.0.13",
    "eslint": "^9.39.1",
    "hono": "^4.10.1",
    "prettier": "^3.2.4",
    "tsup": "^8.5.0",
    "typescript": "^5.8.2",
    "vitest": "^4.0.13",
    "zod": "^4.0.5"
  }
}
